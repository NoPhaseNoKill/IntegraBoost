<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <include resource="org/springframework/boot/logging/logback/defaults.xml" />

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%C - %d{yyyy-MM-dd HH:mm:ss} - %m%n</pattern>
        </encoder>
    </appender>

    <!--    sets this package to info-->
    <logger name="com.integraboost" level="INFO"/>

    <!--    sets everything else to warn-->
    <root level="WARN">
        <appender-ref ref="STDOUT"/>
    </root>

</configuration>

